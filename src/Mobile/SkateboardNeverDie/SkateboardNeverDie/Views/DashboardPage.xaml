<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="{Binding Title}"
             xmlns:viewmodels="clr-namespace:SkateboardNeverDie.ViewModels" x:DataType="viewmodels:DashboardViewModel"
             xmlns:ce="clr-namespace:SkateboardNeverDie.CustomElements"
             x:Class="SkateboardNeverDie.Views.DashboardPage">

    <ContentPage.ToolbarItems>
        <ce:BindableToolbarItem Text="Login" Command="{Binding LoginCommand}" IsVisible="{Binding IsLogged, Converter={StaticResource BooleanValueConverter} }" Order="Primary" />
        <ce:BindableToolbarItem Text="Logout" Command="{Binding LogoutCommand}" IsVisible="{Binding IsLogged}" Order="Primary" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
                <Label Text="{Binding IsRefreshed, StringFormat='Token Refreshed: {0}'}"/>

                <Button VerticalOptions="Center" Text="Refresh Token" Command="{Binding RefreshTokenCommand}"/>
                <Button VerticalOptions="Center" Text="Clean Token" Command="{Binding CleanTokenCommand}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>