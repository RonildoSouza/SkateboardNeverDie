@model LoginViewModel

@{ ViewData["Title"] = "Login"; }

<div class="account card">
    <div class="row account card-body">
        <div class="account col-md-8"></div>
        <div class="account col-md-4">
            <section>
                <h2>@ViewData["Title"]</h2>
                <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">
                    <h4>Sign into your account</h4>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <div class="checkbox">
                            <input asp-for="RememberMe" />
                            <label asp-for="RememberMe"></label>
                        </div>
                    </div>

                    <br />
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-lg btn-dark">Login</button>
                    </div>

                    <br />
                    <p>
                        <a href="#"><small>Forgot password?</small></a>
                        <br />
                        Don't have an account? <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Register here</a>
                    </p>
                </form>
            </section>

            <partial name="_TermsAndPrivacyPartial" />
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
